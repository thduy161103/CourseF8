<div class="mt-8">
  <h3>Cập nhật khóa học</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        class="form-control"
        value="{{course.name}}"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>

    </div>
    <div class="form-group">
      <label for="videoID">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoID}}"
        id="videoID"
        name="videoID"
      />
    </div>

    <button type="submit" class="btn btn-primary">Sửa khóa học</button>
  </form>
</div>